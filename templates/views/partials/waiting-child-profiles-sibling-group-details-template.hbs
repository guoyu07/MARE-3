<script id="sibling-group-details-template" type="text/x-handlebars-template">

	<div class="profile-tab__contents profile-tab__contents--selected" data-contents="profile">

		<div class="profile__basic-info">
			<div class="profile-details__name">\{{ namesString }}</div>
			<div class="profile-details__age">Age \{{ agesString }}</div>
			<!-- TODO: add birthday months/years and birthday cake icon -->
		</div>

		<div class="profile__detailed-info">

			<div class="profile__picture-area">
				<img class="profile__profile-picture" src=\{{ detailImage }}>
				<div class="profile-details__registration-number">Registration # \{{ registrationNumbersString }}</div>
			</div>

			<div class="profile__bio">
				<div class="detailed-child-info__introduction">
					<div class="detailed-child-info__header">Hi! Our names are \{{ namesString }} and \{{ quote }}</div>
				</div>
				<div class="detailed-child-info__part-1">
					<div class="detailed-child-info__text">\{{ profilePart1 }}</div>
				</div>
				<div class="detailed-child-info__part-2">
					<div class="detailed-child-info__text">\{{ profilePart2 }}</div>
				</div>
				<div class="detailed-child-info__part-3">
					<div class="detailed-child-info__text">\{{ profilePart3 }}</div>
				</div>
			</div>
		</div>

		<!-- TODO: make "Information Request form" a button -->
		<div class="profile__footer">
			<span class="detailed-profile__footer-text">You can help bring us closer to finding "a place to call HOME" by filling out the <a href="/forms/information-request-form">MARE Information Request Form</a>. They will be glad to help you get more information about us.</span>
		</div>

		<!-- TODO: redo bookmark design --> 
		<!-- determining whether to add the block below based on whether the user is allowed to bookmark children needs to happen server-side -->
		{{#if canBookmarkChildren}}
		<div class="button-group button-group--horizontal button-group--space-around button-group--large-margin-above button-group--small-margin-below">
			\{{#if isBookmarked}}
			<button class="button button--teal button--large sibling-group-bookmark-button button--active" data-registration-numbers="\{{ registrationNumbers }}">Remove Bookmark</button>
			\{{else}}
			<button class="button button--teal button--large sibling-group-bookmark-button" data-registration-numbers="\{{ registrationNumbers }}">Bookmark</button>
			\{{/if}}
			<a href="/forms/information-request-form?registrationNumber=\{{ registrationNumbers }}">
				<button class="button button--teal button--large sibling-group-inquiry-button">Inquire</button>
			</a>
		</div>
		{{/if}}
	</div>

	\{{#if hasVideo}}
	<div class="profile-details__video-container">
		<iframe src=\{{ video }} frameborder="0" allowfullscreen class="profile-details__video"></iframe>
	</div>
	\{{/if}}

	\{{#if wednesdaysChild}}
	<div class="profile-details__wednesdays-child-video-container">
		<iframe src=\{{ wednesdaysChildVideo }} frameborder="0" allowfullscreen class="profile-details__wednesdays-child-video"></iframe>
	</div>
	\{{/if}}

	<div class="profile__profile-navigation">
		\{{#if hasPrevious}}
		<span class="profile-navigation__previous" data-child-index="\{{ previousIndex }}">
			<span class="profile-navigation__previous-text">Previous Child</span>
		</span>
		\{{/if}}
		\{{#if hasPrevious}}
			\{{#if hasNext}}
			<span class="profile-navigation__divider">|</span>
			\{{/if}}
		\{{/if}}
		\{{#if hasNext}}
		<span class="profile-navigation__next" data-child-index="\{{ nextIndex }}">
			<span class="profile-navigation__next-text">Next Child</span>
		</span>
		\{{/if}}
	</div>

</script>

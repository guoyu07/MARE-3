<section class="site-visitor-registration">
	<form action="/register" class="registration-form form--site-visitor-registration" method="POST">
		<section class="site-visitor-registration-section">
			<div class="form-type-header">Site Visitor Registration</div>
			<span class="required required-description">* Required</span>

			<input type="hidden" class="registration-type" name="registrationType" value="siteVisitor">
			<input type="hidden" name="action" value="register"> <!-- is this needed?  It exists on all forms -->
			<div class="row form-group">
				<div class="col-sm-12">
					<input type="text" id="site-visitor-first-name" class="input" name="firstName" placeholder="John" data-parsley-error-message="required" required="">
					<label for="site-visitor-first-name" class="label required-field">First Name</label>
				</div>
				<div class="col-sm-12">
					<input type="text" id="site-visitor-last-name" class="input" name="lastName" placeholder="Smith" data-parsley-error-message="required" required="">
					<label for="site-visitor-last-name" class="label required-field">Last Name</label>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-sm-12">
					<input type="email" id="site-visitor-email" class="input" name="email" placeholder="john.smith@gmail.com" data-parsley-type="email" data-parsley-trigger="change" data-parsley-error-message="valid email required" required="">
					<label for="site-visitor-email" class="label required-field">Email Address</label>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-sm-12">
					<input type="password" id="site-visitor-password" class="input" name="password" placeholder="**********" data-parsley-error-message="required" required="">
					<label for="site-visitor-password" class="label required-field">Password</label>
				</div>
				<div class="col-sm-12">
					<input type="password" id="site-visitor-confirm-password" class="input" name="confirmPassword" placeholder="**********" data-parsley-equalto="#site-visitor-password" data-parsley-error-message="passwords must match" required="">
					<label for="site-visitor-confirm-password" class="label required-field">Confirm Password</label>
				</div>
			</div>
			<div class="input-section-description">While not required for registration, providing your contact details below will make registering
for events on the MARE site faster and easier.</div>
			<div class="row form-group">
				<div class="col-sm-12">
					<input type="text" id="site-visitor-street-1" class="input" name="street1" placeholder="100 Main Street">
					<label for="site-visitor-street-1" class="label">Street 1</label>
				</div>
				<div class="col-sm-12">
					<input type="text" id="site-visitor-street-2" class="input" name="street2" placeholder="Suite 1">
					<label for="site-visitor-street-2" class="label">Street 2</label>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-sm-12 form-group ma-city-container">
					<select id="ma-city" class="input" name="city" data-parsley-trigger="change" data-parsley-errors-messages-disabled="true" required="">
						<option value=""></option>
						{{#each citiesAndTowns}}
						<option value="{{ _id }}">{{ cityOrTown }}</option>
						{{/each}}
					</select>
					<label for="ma-city" class="label required-field">City</label>
				</div>
				<div class="col-sm-12 form-group non-ma-city-container hidden">
					<input type="text" id="non-ma-city" class="input" name="nonMACity" placeholder="Boston" data-parsley-error-message="required" data-parsley-required="false">
					<label for="non-ma-city" class="label required-field">City</label>
				</div>
				<div class="col-sm-12 form-group">
					<label class="checkbox-inline">
						<input type="checkbox" id="is-not-MA-city-checkbox" name="isNotMACity">I live outside MA
					</label>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-sm-12">
					<select id="site-visitor-state" class="input state-select" name="state">
					{{#each states}}
						{{#if defaultSelection}}
							<option value="{{_id}}" selected="selected">{{state}}</option>
						{{else}}
							<option value="{{_id}}">{{state}}</option>
						{{/if}}
					{{/each}}
					</select>
					<label for="site-visitor-state" class="label">State</label>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-sm-12">
					<input type="number" id="site-visitor-zip-code" class="input" name="zipCode" placeholder="02111">
					<label for="site-visitor-zip-code" class="label">Zip Code</label>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-sm-12">
					<input type="text" id="site-visitor-home-phone" class="input" name="homePhone" placeholder="(617) 111-1111">
					<label for="site-visitor-home-phone" class="label">Home Phone</label>
				</div>
				<div class="col-sm-12">
					<input type="text" id="site-visitor-work-phone" class="input" name="workPhone" placeholder="(617) 222-2222">
					<label for="site-visitor-work-phone" class="label">Work Phone</label>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-sm-12">
					<input type="text" id="site-visitor-mobile-phone" class="input" name="mobilePhone" placeholder="(617) 333-3333">
					<label for="site-visitor-mobile-phone" class="label">Mobile Phone</label>
				</div>
				<div class="col-sm-12">
					<select id="site-visitor-preferred-phone" class="input site-visitor-preferred-phone-select" name="preferredPhone">
						<option value=""></option>
						<option value="home">home</option>
						<option value="work">work</option>
						<option value="mobile">mobile</option>
					</select>
					<label for="site-visitor-preferred-phone" class="label">Preferred Phone</label>
				</div>
			</div>
		</section>

		<section class="site-visitor-mare-and-you-section">
			<div class="form-section-header">Mare &amp; You</div>

			<div class="row">
				<div class="col-sm-24 form-group">
					<label class="label required-field marg-bottom-xs-5">How did you hear about MARE (please check all that apply)?</label>
				</div>
				<div class="col-sm-16">
					<div id="site-visitor-how-did-you-hear-error-container" class="row error-container">
						{{#each waysToHearAboutMARE}}
						<div class="col-sm-12 form-group">
							<label class="checkbox-inline way-to-hear-about-MARE {{#if other}}other-way-to-hear-about-mare{{/if}}">
								<input type="checkbox" name="howDidYouHear[]" value="{{_id}}" data-parsley-errors-messages-disabled="true" data-parsley-class-handler="#site-visitor-how-did-you-hear-error-container" data-parsley-mincheck="1" required="">{{wayToHearAboutMARE}}
							</label>
						</div>
						{{/each}}
					</div>
					<div class="row">
						<div class="col-sm-24 form-group">
							<input type="text" id="site-visitor-how-did-you-hear-other" class="input required-field hidden" name="howDidYouHearOther" data-parsley-required="false" data-parsley-error-message="required" placeholder="other...">
						</div>
					</div>
				</div>
			</div>

			{{#each mailingLists }}
			{{#if showOnSiteVisitorRegistrationPage}}
			<div class="row form-group">
				<div class="col-sm-12">
					<label class="label marg-bottom-xs-5">{{ displayText }}</label>
				</div>
				<div class="col-sm-12">
					<label class="radio-inline"><input type="radio" name="mailingLists[{{@index}}]" value={{ _id }} checked="checked">Yes</label>
					<label class="radio-inline"><input type="radio" name="mailingLists[{{@index}}]" value="">No</label>
				</div>
			</div>
			{{/if}}
			{{/each}}

			<button class="button button--blue submit" type="submit">Register</button>
		</section>
	</form>
</section>
